<script type="text/javascript">
function run_script() {
  var $result = $("#status"); 

  $.ajax({
    type: "POST",
    data: {
      "area_1": $('#area_1').val(), 
      "area_2": $('#area_2').val()
    },
    dataType: "html",
    url: "ajax.php",
    beforeSend: function() {
      $result.html('<div class="alert">Wait...</div>');
    },
    success: function(data) {
      $result.html(data);
    },
  });

}
</script>

